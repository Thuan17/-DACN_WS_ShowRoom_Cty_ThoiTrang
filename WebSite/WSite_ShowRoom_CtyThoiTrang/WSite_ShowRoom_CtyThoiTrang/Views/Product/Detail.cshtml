@model WSite_ShowRoom_CtyThoiTrang.Models.tb_Products
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Detail</h2>


@if (Model != null)
{
    <div class="container ">
        <div class="product-content product-wrap clearfix product-deatil ">
            <div class="row">
                <div class="col-md-5 col-sm-12 col-xs-12">
                    @if (Model.tb_ProductImage != null && Model.tb_ProductImage.Any())
                    {
                        <div class="single_product_pics">
                            <div class="row">
                                <div class="col-lg-3 thumbnails_col order-lg-1 order-2">
                                    <div class="single_product_thumbnails">
                                        <ul>
                                            @foreach (var item in Model.tb_ProductImage)
                                            {


                                                <div id="myCarousel-2" class="carousel slide">
                                                    <ul class="carousel-indicators">
                                                        <li data-target="#myCarousel-2" data-slide-to="0" class="active"></li>
                                                        <li data-target="#myCarousel-2" data-slide-to="1" class="active"></li>
                                                        <li data-target="#myCarousel-2" data-slide-to="2" class="active"></li>
                                                    </ul>
                                                    <div class="@*carousel-inner*@">
                                                        @if (item.IsDefault)
                                                        {
                                                            <div class="item active">
                                                                <img src="@item.Image" class="img-responsive" width="300px" />
                                                            </div>

                                                        }
                                                        else
                                                        {
                                                            <div class="item">
                                                                <img src="@item.Image" class="img-responsive" width="300px" />
                                                            </div>
                                                        }

                                                    </div>

                                                </div>


                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div class="col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
                    <h2> @Model.Title</h2>
                    <p>Tình Trạng : Còn Hàng</p>
                    @Html.Action("Partial_ProductDetail", "Product", new { id = Model.ProductId })
                    <h3 class="">
                        @if (Model.PriceSale > 0)
                        {
                            <ul class="p-sm-2">
                                <li>
                                    <small> Giá Gốc :</small>
                                    <small class="text-decoration-line-through"> @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(Model.Price) đ</small>
                                </li>
                                <li>

                                    <small class="text-danger">Giá Khuyến Mãi: @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(Model.PriceSale) đ</small>


                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="p-sm-2">
                                <li>
                                    <small>Giá Gốc : @WSite_ShowRoom_CtyThoiTrang.Common.Common.FormatNumber(Model.Price)đ</small>
                                </li>
                            </ul>
                        }
                    </h3>
                    <hr />
                    <table class="table table-bordered my-3">
                        <tbody>
                            <tr>
                                <th class=""><i class="fas fa-money"></i>  Hàng chính hãng, chứng nhận an toàn</th>
                            </tr>
                            <tr>
                                <th class=""><i class="fas fa-cart"></i>  Miễn phí giao hàng toàn quốc đơn trên 500K</th>
                            </tr>
                            <tr>
                                <th class=""><i class="fas fa-phone"></i>  Liên hệ hỗ trợ: 1900.1208</th>
                            </tr>
                            <tr>
                            </tr>

                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
}
else
{
    <p> Không có bản ghi nào !</p>
}



<script src="../js/jquery-3.1.1.min.js" type=text/javascript></script>
<script src="../js/bootstrap.min.js" type=text/javascript></script>
<script src="../js/custom.js" type=text/javascript></script>



<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
<script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
