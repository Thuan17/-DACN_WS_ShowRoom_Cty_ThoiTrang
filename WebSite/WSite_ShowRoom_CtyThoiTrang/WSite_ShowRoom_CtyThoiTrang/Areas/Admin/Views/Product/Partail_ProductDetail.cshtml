@model IEnumerable<WSite_ShowRoom_CtyThoiTrang.Models.tb_ProductDetai>

@if (Model != null)
{
    foreach (var item in Model)
    {
        if (item.Size == 1)
        {
            <h6>
                Size:M <samp>Số lượng : @item.Quantity</samp>
            </h6>
        }
        else if (item.Size == 2)
        {
            <h6>
                Size:L <samp>Số lượng : @item.Quantity</samp>
            </h6>
        }
        else  
        {
            <h6>
                Size: XL <samp>Số lượng : @item.Quantity</samp>
            </h6>
        }
    }
}

